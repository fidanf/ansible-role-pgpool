if_down_cmd = '{{ pgpool_if_down_cmd }}'
                                    # shutdown delegate IP command
                                    # (change requires restart)
arping_path = '{{ pgpool_arping_path }}'
                                    # arping command path
                                    # If arping_cmd starts with "/", if_cmd_path will be ignored.
