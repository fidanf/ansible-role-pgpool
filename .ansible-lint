---
# https://docs.ansible.com/ansible-lint/rules/default_rules.html
exclude_paths: 
  - ../.ansible/roles/
  - ~/.cache/molecule/ansible-role-pgpool/default/roles/
  - .cache/
  - .github/
verbosity: 1
use_default_rules: true
skip_list:
  - command-instead-of-shell
  - no-changed-when
  - no-handler
  - empty-string-compare
  - ignore-errors
  - var-naming
  - fqcn-builtins
  - schema
warn_list:
  - no-log-password
